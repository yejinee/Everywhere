<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/rounded_layout"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/search_townImage"
            android:layout_width="180dp"
            android:layout_marginLeft="5dp"
            android:layout_height="150dp"
            android:src="@drawable/gps"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/search_townTag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="체험여행"
            android:textSize="15dp"
            android:padding="3dp"
            android:textColor="@color/textWhite"
            android:background="@drawable/rounded_button_yellow"/>

        <TextView
            android:id="@+id/search_townName"
            android:text="샘플 마을 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_townAddress"
            android:text="샘플 마을 주소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/search_function"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#체험 #워크샵 #레포츠 #휴양 #먹거리"/>

    </LinearLayout>

</LinearLayout>